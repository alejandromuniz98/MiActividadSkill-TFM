{
    "type": "APL",
    "version": "1.1",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-viewport-profiles",
            "version": "1.0.0"
        },
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        },
        {
            "name": "alexa-styles",
            "version": "1.0.0"
        }
    ],
    "layouts": {
        "LaunchScreen": {
            "items": [
                {
                    "type": "Container",
                    "width": "100%",
                    "height": "100%",
                    "justifyContent": "center",
                    "alignItems": "center",
                    "item": [
                        {
                            "type": "Image",
                            "source": "https://i.ibb.co/f4Z42JV/icon-512-A2-Z.png",
                            "width": "20vw",
                            "height": "20vw",
                            "scale": "best-fill"
                        },
                        {
                            "type": "Text",
                            "text": "Bienvenido a Mi Actividad",
                            "style": "textStyleDisplay5",
                            "textAlign": "center",
                            "paddingTop": "30dp",
                            "color": "white"
                        }
                    ]
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "direction": "column",
                "items": [
                    {
                        "type": "Image",
                        "source": "https://www.savalnet.ec/medios/mm/reportajes/2020/231060rg01.jpg",
                        "scale": "best-fill",
                        "width": "100vw",
                        "height": "100vh",
                        "opacity": 0.4
                    },
                    {
                        "type": "Container",
                        "position": "absolute",
                        "width": "100vw",
                        "height": "100vh",
                        "direction": "column",
                        "items": [
                            {
                                "headerTitle": "Trabajo Fin de Master - Alejandro Mu√±iz",
                                "type": "AlexaHeader",
                                "headerAttributionImage": "https://ubicamp.uniovi.es/Ubicamp-theme/images/c1nn/uniovi.png"
                            },
                            {
                                "type": "Container",
                                "width": "100vw",
                                "height": "70vh",
                                "direction": "column",
                                "alignItems": "center",
                                "justifyContent": "center",
                                "items": [
                                    {
                                        "type": "LaunchScreen"
                                    }
                                ]
                            },
                            {
                                "type": "AlexaFooter",
                                "footerHint": "Si no sabes que hacer di, 'Ayuda'"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}